<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text</item>
    </style>

    <style name="clear_button">
        <item name="android:background">@drawable/clear_button_background</item>
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text</item>
    </style>

    <style name="title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/cairo</item>
    </style>

    <style name="label">
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/label_text_size</item>
    </style>

    <style name="item_text">
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/item_text_size</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="empty_state_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/cairo</item>
        <item name="android:textSize">@dimen/empty_state_text_size</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:fontFamily">@font/cairo</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>